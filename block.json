{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "valve/posts-picker",
	"version": "0.1.0",
	"title": "Posts Picker",
	"category": "valve-blocks",
	"icon": "admin-post",
	"description": "The block to display selected posts in a grid layout.",
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "blockId": {
      "type": "string"
    },
    "innerBlocksType": {
      "type": "string",
      "default": "core/query"
    },
    "postType": {
      "type": "string",
      "default": ""
    },
    "postId": {
      "type": "string",
      "default": ""
    },
    "selectedPosts": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "displayLayout": {
      "type": "string",
      "default": "grid"
    },
    "columnsDesktop": {
      "type": "number",
      "default": 3
    },
    "columnsTablet": {
      "type": "number",
      "default": 2
    },
    "columnsMobile": {
      "type": "number",
      "default": 1
    }
  },
	"example": {},
	"textdomain": "posts-picker",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
